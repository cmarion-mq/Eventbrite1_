<h2 class="py-4"> (<%=@event.title%>) </h2>

<h4 class="py-4">Suivi des inscriptions (<%=@event.attendees.size%>)</h4>
<table class="table">
  <% n = 1 %>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Inscrit</th>
    </tr>
  </thead>
  <% @event.attendances.each do |attendance|%>
    <tbody>
      <tr>
        <th scope="row"> <%= n %> </th>
        <td> <%= attendance.created_at %> </td>
        <td> <%= attendance.attendee.first_name %> <%= attendance.attendee.last_name %> </td>
        <% n = n+1 %>
      </tr>
    </tbody>
  <% end %>
</table>

<br/>
<br/>
<%= link_to 'Modifier l évènement', edit_event_path(@event), class:"btn btn-secondary" %>